<hibernate-mapping>
    <class name="ru.job4j.models.xml.Car" table="cars">
        <id name="id" column="car_id">
            <generator class="identity"/>
        </id>
        <property name="name" column="car_name"/>
        <many-to-one name="body" column="body_id" class="ru.job4j.models.xml.CarBody"/>
        <many-to-one name="engine" column="engine_id" class="ru.job4j.models.xml.CarEngine"/>
        <many-to-one name="transmission" column="transmission_id" class="ru.job4j.models.xml.CarTransmission"/>
    </class>
</hibernate-mapping>